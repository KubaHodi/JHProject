<%= form_with(model: brand, class: "contents") do |form| %>
  <% if brand.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(brand.errors.count, "error") %> prohibited this brand from being saved:</h2>

      <ul class="list-disc ml-6">
        <% brand.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name %>
    <%= form.text_field :name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": brand.errors[:name].none?, "border-red-400 focus:outline-red-600": brand.errors[:name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :production_date %>
    <%= form.date_field :production_date, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": brand.errors[:production_date].none?, "border-red-400 focus:outline-red-600": brand.errors[:production_date].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :founder_name %>
    <%= form.text_field :founder_name, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": brand.errors[:founder_name].none?, "border-red-400 focus:outline-red-600": brand.errors[:founder_name].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :founder_surname %>
    <%= form.text_field :founder_surname, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": brand.errors[:founder_surname].none?, "border-red-400 focus:outline-red-600": brand.errors[:founder_surname].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
