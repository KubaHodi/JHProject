<% content_for :title, "Cars" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Cars</h1>
    
  </div>

  <div id="cars" class="min-w-full divide-y divide-gray-200 space-y-5">
    <% if @cars.any? %>
      <% @cars.each do |car| %>
        <div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
          <%= render car %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
          <% if session[:user_id] %>
          <%= link_to "New car", new_car_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
            <%= link_to "Show", car_path(id: car.id), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Edit", edit_car_path(car), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "Destroy", car, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          <% else %>
            <%= link_to "Show", car_path(id: car.id), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
          <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-center my-10">No cars found.</p>
    <% end %>
  </div>
</div>
